class Patient:
  def __init__(self, id, name, medical_history, current_condition):
      self.id = id
      self.name = name
      self.medical_history = medical_history
      self.current_condition = current_condition

class Doctor:
  def __init__(self, id, name, specialty):
      self.id = id
      self.name = name
      self.specialty = specialty

class Prescription:
  def __init__(self, patient_id, doctor_id, medication, dosage):
      self.patient_id = patient_id
      self.doctor_id = doctor_id
      self.medication = medication
      self.dosage = dosage
class Appointment:
  def __init__(self, patient_id, doctor_id, appointment_time):
      self.patient_id = patient_id
      self.doctor_id = doctor_id
      self.appointment_time = appointment_time
class HospitalSystem:
  def __init__(self):
      self.patients = {}  # patient_id: Patient object
      self.doctors = {}  # doctor_id: Doctor object
      self.prescriptions = []  # Stack of Prescription objects
      self.appointments = []  # Queue of Appointment objects

  def add_patient(self, patient):
      self.patients[patient.id] = patient

  def update_patient(self, patient_id, **updates):
      if patient_id in self.patients:
          for attribute, value in updates.items():
              setattr(self.patients[patient_id], attribute, value)
      else:
          print(f"No patient found with ID {patient_id}")
